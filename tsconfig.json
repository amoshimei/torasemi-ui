{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",    // Do not need to write relative paths
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["react"] // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/33311#issuecomment-466731156
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}